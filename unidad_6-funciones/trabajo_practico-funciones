# definicion de funciones

## 1. Funcion para imprimir "Hola Mundo!"##
def imprimir_hola_mundo():
    print("Hola Mundo!")

## 2. Funcion para saludar al usuario ##
def saludar_usuario(nombre): 
    return f"Hola {nombre}!"

##3. Funcion para imprimir informacion personal ##
def informacion_personal(nombre, apellido, edad, residencia): 
    print(f"Soy {nombre} {apellido}, tengo {edad} años y vivo en {residencia}")

## 4. Funciones de Circulo ##
import math
def calcular_area_circulo(radio):
    return math.pi * (radio ** 2)

def calcular_perimetro_circulo(radio):
    return 2 * math.pi * radio

## 5. Conversion de Segundos a Horas ##
def segundos_a_horas(segundos):
    return segundos / 3600

## 6. Tabla de Multiplicar ##
def tabla_multiplicar(numero):
    print(f"\nTabla de multiplicar del {numero}:")
    for i in range(1, 11):
        resultado = numero * i
        print(f"{numero} x {i} = {resultado}")

## 7. Operaciones Basicas ##
def operaciones_basicas(a, b):
    suma = a + b
    resta = a - b
    multiplicacion = a * b
    
    ## Manejo de division por cero ##
    if b != 0:
        division = a / b
    else:
        division = "Indefinida (Division por cero)"
        
    return (suma, resta, multiplicacion, division)

## 8. Calculo del indice de Masa Corporal (IMC) ##
def calcular_imc(peso, altura):
    return peso / (altura ** 2)

## 9. Conversion de Celsius a Fahrenheit ##
def celsius_a_fahrenheit(celsius):
    return (celsius * 9/5) + 32

## 10. Cálculo de Promedio ##
def calcular_promedio(a, b, c):
    return (a + b + c) / 3

## PROGRAMA PRINCIPAL  ##

print(" Hola Mundo ")
imprimir_hola_mundo()

print(" Saludo Personalizado ")
try:
    nombre_usuario = input(" ingresa tu nombre ")
    saludo = saludar_usuario(nombre_usuario)
    print(saludo)
except Exception as e:
    print(f"Ocurrio un error: {e}")

print(" Informacion Personal ")
try:
    nombre_p = input("Ingresa tu nombre: ")
    apellido_p = input("Ingresa tu apellido: ")
    edad_p = input("Ingresa tu edad: ")
    residencia_p = input("Ingresa tu lugar de residencia: ")
    informacion_personal(nombre_p, apellido_p, edad_p, residencia_p)
except Exception as e:
    print(f"Ocurrio un error: {e}")

print(" Area y Perimetro del Circulo ")
try:
    radio = float(input("Ingresa el radio del circulo: "))
    area = calcular_area_circulo(radio)
    perimetro = calcular_perimetro_circulo(radio)
    print(f"El area del circulo es: {area:.2f}")
    print(f"El perimetro del circulo es: {perimetro:.2f}")
except ValueError:
    print(" Entrada no valida . ingresa un numero para el radio ")

print(" Segundos a Horas ")
try:
    segundos = int(input("Ingresa una cantidad de segundos: "))
    horas = segundos_a_horas(segundos)
    print(f"{segundos} segundos equivalen a {horas:.2f} horas.")
except ValueError:
    print(" entrada no valida . ingresa un numero entero.")

print(" Tabla de Multiplicar ")
try:
    numero_tabla = int(input("Ingresa un numero para ver su tabla de multiplicar (1-10): "))
    tabla_multiplicar(numero_tabla)
except ValueError:
    print(" Entrada no valida. ingresa un numero entero.")

print(" Operaciones Basicas ")
try:
    num1 = float(input("Ingresa el primer numero (a): "))
    num2 = float(input("Ingresa el segundo numero (b): "))
    
    suma_r, resta_r, mult_r, div_r = operaciones_basicas(num1, num2)
    
    print(f"Suma (a + b): {suma_r}")
    print(f"Resta (a - b): {resta_r}")
    print(f"Multiplicacion (a * b): {mult_r}")
    print(f"División (a / b): {div_r}")
except ValueError:
    print(" Entrada no valida. ingresa numeros.")

print(" Calculo de IMC ")
try:
    peso = float(input("Ingresa tu peso en kg : "))
    altura = float(input("Ingresa tu altura en metros "))
    
    if altura > 0:
        imc = calcular_imc(peso, altura)
        print(f"Tu Índice de Masa Corporal (IMC) es: {imc:.2f}")
    else:
        print(" La altura debe ser mayor que cero ")
except ValueError:
    print(" Entrada no válida. ingresa numeros ")

print(" Conversion de Celsius a Fahrenheit ")
try:
    celsius = float(input("Ingresa la temperatura en grados Celsius: "))
    fahrenheit = celsius_a_fahrenheit(celsius)
    print(f"{celsius}°C equivalen a {fahrenheit:.2f}°F.")
except ValueError:
    print(" Entrada no valida. ingresa un numero.")

print(" Calculo de Promedio ")
try:
    prom1 = float(input("Ingresa el primer numero: "))
    prom2 = float(input("Ingresa el segundo numero: "))
    prom3 = float(input("Ingresa el tercer numero: "))
    
    promedio = calcular_promedio(prom1, prom2, prom3)
    print(f"El promedio de los tres números es: {promedio:.2f}")
except ValueError:
    print(" Entrada no valida. ingresa numeros.")